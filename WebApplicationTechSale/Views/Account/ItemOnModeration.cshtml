@using DataAccessLogic.DatabaseModels

@model Item

<div class="col">
    <div class="card h-100  item-card bg-light">
        <div class="card-header text-center"><h5 class="py-0 my-0">На модерации</h5></div>
        <img src="@Model.PhotoSrc" class="card-img-top item-card-img list-lot " alt="...">
        <div class="card-body">
            <a class="auction-link" asp-action="OpenAntique" asp-controller="User" asp-route-id="@Model.Id">
                <h5 class="card-title">@Model.Name</h5>
            </a>
        </div>
        <div class="card-footer border-top-0 bg-light">
            <a asp-action="OpenItem" asp-controller="User" asp-route-id="@Model.Id" class="my-2 btn btn-lg btn-dark  d-block">Подробнее</a>
        </div>
    </div>
</div>
