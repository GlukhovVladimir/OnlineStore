@model CreateItemViewModel

@{
    ViewData["Title"] = "Новый товар";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card my-3 ">
                <div class="card-body">
                    <h5 class="card-title text-center my-3">Создайте новый товар</h5>
                    <form method="post" asp-action="CreateItem" asp-controller="User" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" id="name" class="form-control ">
                            <div class="form-text">Не более 150 символов</div>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" id="description" class="form-control " rows="3"></textarea>
                            <div class="form-text">Не более 500 символов</div>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" id="price" class="form-control " type="number" min="0">
                            <span class="text-danger" asp-validation-for="Price"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Photo" class="form-label"></label>
                            <input asp-for="Photo" id="photo" class="form-control " type="file" accept=".png, .jpeg, image/jpeg, image/pjpeg, image/png">
                            <div class="form-text">Файл размером до 5 Мегабайт в одном из форматов: .jpeg .jpg .png</div>
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" id="Go" class="btn btn-lg btn-success ">Подтвердить и отправить на проверку</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>